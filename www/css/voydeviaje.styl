body
  font-family: "-apple-system", "Helvetica Neue", "Roboto", "Segoe UI", sans-serif;

.home
  &__content
    height 100%
  &__boxSlider
    display block
    height 50%
    &__slider
      height 100%
      &__boxImg
        height 100%
        text-align center
      &__text
        width 100%
        position: absolute;
        top: 20%;
        z-index: 3000;
        text-align: center
        color white
        padding 0px 10px
        font-size 20px
      &__img
        filter: brightness(0.6);
        width 100%
        height 100%

  &__boxModulos
    height 50%
    display block
    &__row
      height 50%
      padding-top 40px !important
    &__item
      &__ancla
        display block
        width 100%
        height 100%
        text-decoration none
      &__icon
        color $green
        font-size 42px
      &__name
        color $azulOscuro
        font-size 14px
        font-weight bold




.atractivoDetail
  &__boxHeaderDescripcion
    display block
    height 50%
  &__boxHeader
    display block
    height 50%
    margin-bottom 60px
  &__titleLugar
    text-align center
    font-size 18px
    margin-top 15px
    position absolute
    top 35%
    z-index 1000
    color white
    padding 0px 25px
    width 100%
  &__titleAgencia
    position absolute
    width 100%
    z-index 1000
    padding 12px 20px
    bottom 0rem
    margin 0rem
    font-size 17px
    text-align left
    color white
    background rgba(0,0,0,0.8)
  &__boxPortada
    position relative
    height 100%
  &__imgPortada
    filter: brightness(0.6)
    width 100%
    height 100%
  &__boxBtns
    position absolute
    top 88%
    z-index 1000
    &__btn
      border-radius 50%
      font-size 23px
      background $azulOscuro !important
      box-shadow 0px 6px rgba(0,0,0,0.1)
    &__span
      font-size 12px
      color $cenizoClaro
  &__boxBtnsAgencia
    margin-top -50px
    z-index 1000
    &__btn
      border-radius 50%
      font-size 23px
      background $azulOscuro !important
      box-shadow 0px 6px rgba(0,0,0,0.1)
    &__span
      font-size 12px
      color $cenizoClaro

  &__boxPaquetes
    display block
    margin-bottom 15px
    &__header
      display flex
      justify-content space-between
      padding 0px 10px
      &__text
        font-size 12px
        font-weight bold
      &__ancla
        color $green
        font-weight bold
        font-size 12px
    &__content
      overflow: auto
      white-space: nowrap
      height 120px
    &__item
      display inline-block
      width 50%
      height 100%
      margin-right 5px
      position relative
      &__img
        width 100%
        height 100%
        filter: brightness(0.8)
      &__boxPrecio
        width 40%
        position absolute
        min-height 30px
        top 0
        right 0
        background rgba(0,0,0,0.5)
        text-align right
      &__boxName
        min-height 30px
        width 100%
        position absolute
        bottom 0
        background rgba(0,0,0,0.5)
      &__name
        width 100%
        white-space initial
        padding 0px 5px
        font-size 11px
        color white
  &__boxDescription
    margin-top: 15px;
    margin-bottom 15px;
    padding: 0px 10px;
    text-align center
    &__text
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-bottom 3px
      color $cenizoClaro
    &__ancla
      color $green
      font-weight bold
      text-decoration none


  &__boxCompartir
    padding 0px 15px
    &__btn
      border-radius 5px
      border 1px dashed $cenizoClaro
      color white
    &__ancla
      text-decoration none
    &__icono
      margin-right 7px
      font-size 21px
      color $green
    &__text
      color $cenizoClaro

.emergency
  &__btn
    background $azulOscuro
    border-radius 150%
    font-size 30px
    color white
    box-shadow 2px 3px rgba(0,0,0,0.2)


.galery
  &__boxSlide
    background #000000f2
  &__img
    width 100%
    height 300px !important
    margin-top 5rem
  &__imgEmpty
    width 100%
    height 240px !important
    margin-top 5rem
  &__textEmpty
    width 100%
    text-align center
    font-weight bold
    color darkgrey
    font-size 16px
  &__description
    color white
    padding 0px 15px
    text-align center
    margin-top 15px
    font-size 14px



.galeria
  &__content
    display: inline-block;
    width: 100%;
    height 100%
    background: $greyLight;
    text-align: left;
  &__item
    display: inline-block;
    height 33%
    width: 50%;
    padding: .1rem;
    margin: 0rem;
  &__img
    height 100%
    width 100%
  &__modal
    background $dark
    min-height 100%
    overflow-y auto
    &__boxReturn
      padding 25px 20px
      display flex
      justify-content space-between
      &__ancla
        font-size 18px
        color white
        background $dark
        border none
        text-decoration none
    &__img
      margin-top 5%
      width 100%
      height 360px
    &__name
      font-size 15px
      color white
      padding 0px 10px
      text-align center



.paquete
  &__content
    height 100%
  &__row
    height 100%
    width 100%
    padding 0rem !important
  &__boxItem
    height 25% !important
    margin 6px
    &__boxImg
      width 100%
      height 100%
      padding 0rem !important
      &__img
        width 100%
        height 100%
    &__boxText
      width 100%
      &__content
        position relative
        height 100%
        width 100%
        padding 3px
      &__name
        font-size 12px
        text-transform uppercase
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
      &__nameAgencia
        font-size 12px
        color $cenizoLight
        &__linkAgencia
          color $green
          font-weight 500
          text-decoration none
      &__likes
        font-size 12px
        position absolute
        bottom 0rem
        left 5px
        &__star
          font-size: 15px;
          color: $yellowStar;
          font-weight: bold;
      &__precio
        font-size 16px
        position absolute
        bottom 0rem
        right 5px
        color $azulOscuro
      &__btnDetail
        height 30px
        font-size 12px
        padding 4px 10px
        background $dark
        color white
        position absolute
        bottom 0rem
        right 5px






.agencia
  &__content
    width 100%
    height 100%
  &__item
    height 50%
    margin-top 10px
    margin-bottom 0rem !important
    padding 0rem
    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.3);
    &__boxImg
      height 70%
      width 100%
      &__img
        width 100%
        height 100%
    &__boxtext
      height 30%
      padding 10px 10px
      position relative
      &__name
        font-size 13px !important
        line-height 20px
        text-transform uppercase
        margin-top 5px
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden !important;
        text-overflow: ellipsis !important;
      &__boxLike
        position absolute
        bottom 5px
        left 10px
      &__number
        color $dark
        font-size 14px
      &__likes
        font-size 20px
        margin-right 5px
        color $yellowStar
  &__detalle
    &__boxRedes
      display block
      padding 6px 30px
    &__linkRed
      text-decoration none
      display block
      margin-bottom 7px
      &__icon
        font-size 20px
        margin-right 10px
      &__red
        color $green
        font-weight bold
        font-size 14px
        text-decoration underline !important

.modal-backdrop, .modal-backdrop-bg
  top 0% !important

.active
  color $green !important
  font-weight bold !important
.active > a
  background #f4f4f4 !important

