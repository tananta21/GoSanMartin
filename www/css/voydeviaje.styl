body
  font-family: "-apple-system", "Helvetica Neue", "Roboto", "Segoe UI", sans-serif;


.atractivoDetail
  &__boxHeader
    display block
    height 50%
  &__titleLugar
    text-align center
    font-size 20px
    margin-top 15px
    position absolute
    top 20%
    z-index 1000
    color white
    padding 0px 25px
    width 100%
  &__boxPortada
    height 100%
  &__imgPortada
    filter: brightness(0.6)
    width 100%
    height 100%
  &__boxBtns
    position absolute
    top 275px
    z-index 1000
    &__btn
      border-radius 50%
      font-size 23px
      background $azulOscuro !important
      box-shadow 0px 6px rgba(0,0,0,0.1)
    &__span
      font-size 12px
      color $cenizoClaro

  &__boxDescription
    margin-top: 15px;
    padding: 0px 10px;
    text-align center
    &__text
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-bottom 3px
      color $cenizoClaro
    &__ancla
      color $green
      font-weight bold
      text-decoration none

  &__boxCompartir
    margin-top 60px
    padding 0px 15px
    &__btn
      border-radius 5px
      border 1px dashed $cenizoClaro
      color white
    &__ancla
      text-decoration none
    &__icono
      margin-right 7px
      font-size 21px
      color $green
    &__text
      color $cenizoClaro

.emergency
  &__btn
    background $azulOscuro
    border-radius 150%
    font-size 30px
    color white
    box-shadow 2px 3px rgba(0,0,0,0.2)


.galery
  &__boxSlide
    background #000000f2
  &__img
    width 100%
    height 300px !important
    margin-top 5rem
  &__description
    color white
    padding 0px 15px
    text-align center
    margin-top 15px
    font-size 12px



