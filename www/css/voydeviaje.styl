@import "colores.styl"
@import "utils.styl"
body
  font-family: "-apple-system", "Helvetica Neue", "Roboto", "Segoe UI", sans-serif;

.home
  &__content
    height 100%
  &__boxSlider
    display block
    height 50%
    &__slider
      height 100%
      &__boxImg
        height 100%
        text-align center
      &__text
        width 100%
        position: absolute;
        top: 20%;
        z-index: 3000;
        text-align: center
        color white
        padding 0px 10px
        font-size 20px
      &__img
        filter: brightness(1);
        width 100%
        height 100%

  &__boxModulos
    height 50%
    display block
    &__row
      height 50%
      padding-top 25px !important
    &__item
      &__ancla
        display block
        width 100%
        height 100%
        text-decoration none
      &__icon
        color $green
        font-size 43px
      &__name
        color $azulOscuro
        font-size 16px
        font-weight bold

.atractivoDetail
  &__boxHeaderDescripcion
    display block
    height 50%
  &__boxHeader
    display block
    height 50%
    margin-bottom 60px
  &__boxHeaderAgencia
    display block
    height 40%
    margin-bottom 60px
  &__boxHeaderDetallePaquete
    display block
    height 45%
    margin-bottom 20px
  &__titleLugar
    text-align center
    font-size 21px
    margin-top 15px
    position absolute
    top 35%
    z-index 1000
    color white
    padding 0px 25px
    width 100%
  &__titleAgencia
    position absolute
    width 100%
    z-index 1000
    padding 12px 20px
    bottom 0rem
    margin 0rem
    font-size 17px
    text-align left
    color white
    background rgba(0,0,0,0.8)
  &__boxPortada
    position relative
    height 100%
  &__imgPortada
    filter: brightness(0.6)
    width 100%
    height 100%
  &__boxBtns
    position absolute
    top 85%
    z-index 1000
    &__btn
      min-width 60px !important
      min-height 55px !important
      border-radius 50%
      font-size 27px
      background $azulOscuro !important
      box-shadow 0px 4px rgba(1,1,1,.1)
    &__span
      margin-top 5px
      font-size 15px
      color $green
      font-weight 500
  &__boxBtnsAgencia
    margin-top -50px
    z-index 1000
    &__btn
      border-radius 50%
      font-size 23px
      background $azulOscuro !important
      box-shadow 0px 6px rgba(0,0,0,0.1)
    &__span
      font-size 12px
      color $cenizoClaro

  &__boxPaquetes
    display block
    padding-top 20px
    &__header
      display flex
      justify-content space-between
      padding 0px 10px
      &__text
        font-size 15px
        font-weight bold
      &__ancla
        color $green
        font-weight bold
        font-size 16px
    &__content
      overflow-x: auto
      overflow-y hidden
      white-space: nowrap
      height 145px
    &__item
      display inline-block
      width 50%
      height 100%
      margin-right 5px
      position relative
      &__img
        width 100%
        height 100%
        filter: brightness(0.8)
      &__boxPrecio
        width 40%
        position absolute
        min-height 30px
        top 0
        right 0
        background rgba(0,0,0,0.5)
        text-align right
      &__boxName
        min-height 30px
        width 100%
        position absolute
        bottom 0
        background rgba(0,0,0,0.5)
      &__name
        width 100%
        white-space initial
        padding 0px 5px
        font-size 16px
        color white
  &__boxDescription
    padding 15px 15px 0px 15px
    text-align center
    &__text
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-bottom 3px
      color $cenizoClaro
    &__ancla
      color $green
      font-weight bold
      text-decoration none
      font-size 16px


  &__boxCompartir
    padding 20px 15px 0px 15px
    &__btn
      border-radius 5px
      border 2px dashed $cenizoClaro
      color white
    &__ancla
      text-decoration none
    &__icono
      margin-right 7px
      font-size 24px
      color $green
    &__text
      font-weight 500
      font-size 17px
      color $cenizoClaro
  &__boxAnotation
    padding 20px 15px 20px 15px


.emergency
  &__btn
    background $azulOscuro
    border-radius 150%
    font-size 30px
    color white
    box-shadow 2px 3px rgba(0,0,0,0.2)


.galery
  &__boxSlide
    background #000000f2
  &__img
    width 100% !important
    height 310px !important
    margin-top 5rem
  &__imgEmpty
    width 100%
    height 240px !important
    margin-top 5rem
  &__textEmpty
    width 100%
    text-align center
    font-weight bold
    color darkgrey
    font-size 16px
  &__description
    color white
    padding 0px 15px
    text-align center
    margin-top 15px
    font-size 14px



.galeria
  &__content
    display: inline-block;
    width: 100%;
    height 100%
    background: $greyLight;
    text-align: left;
  &__item
    display: inline-block;
    height 33%
    width: 50%;
    padding: .1rem;
    margin: 0rem;
  &__img
    height 100%
    width 100%
  &__modal
    background $dark
    min-height 100%
    overflow-y auto
    &__boxReturn
      padding 25px 20px
      display flex
      justify-content space-between
      &__ancla
        font-size 18px
        color white
        background $dark
        border none
        text-decoration none
    &__img
      margin-top 5%
      width 100%
      height 360px
    &__name
      font-size 15px
      color white
      padding 0px 10px
      text-align center



.paquete
  &__content
    height 100%
  &__row
    height 100%
    width 100%
    padding 0rem !important
  &__boxItem
    height 175px !important
    margin 6px
    &__boxImg
      width 100%
      height 100%
      padding 0rem !important
      &__img
        width 100%
        height 100%
    &__boxText
      width 100%
      &__content
        position relative
        height 100%
        width 100%
        padding 3px
      &__name
        font-size 15px
        text-transform uppercase
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
      &__nameAgencia
        font-size 15px
        color $cenizoLight
        &__linkAgencia
          color $green
          font-weight 500
          line-height 21px
      &__likes
        font-size 13px
        position absolute
        bottom 0rem
        left 5px
        &__star
          font-size: 15px;
          color: $yellowStar;
          font-weight: bold;
      &__precio
        font-size 16px
        position absolute
        bottom 0rem
        right 5px
        color $azulOscuro
      &__btnDetail
        position absolute
        left 0px
        right 5px
        bottom 2px
        text-decoration none
        font-size 16px
        color white
        border-radius 2px !important
        min-height: 28px !important
        padding: 10px !important
        line-height: 0px !important
        width: 100% !important


.detallePaquete
  display: block
  &__boxPrecios
    display block
    width 100%
    &__title
      font-size 16px
      color $dark
      text-align center
      font-weight bold
    &__content
      display inline-block
    &__item
      display inline-block
      text-align center
      width 100%
      margin-bottom 5px
    &__descrip
      color $azulOscuro
      font-weight 500
    &__btn
      width 100%
      font-weight 500

  &__iti
    display block
    &__item
      border 2px dashed $azulOscuro
      min-height 30px
      text-align center
      border-radius 5px
      margin-bottom 13px
    &__ancla
      text-decoration none
    &__text
      color $green !important
      font-size 17px !important
      font-weight 500
      padding 10px !important

.detalleItinerario
  &__lugarName
    color $azulOscuro !important
    font-size 16px !important
    margin-bottom 6px !important
    font-weight 500 !important
  &__lugarAncla
    color $green !important
    font-size 16px !important
    margin-bottom 6px !important
    font-weight 500 !important


.agencia
  &__content
    width 100%
    height 100%
  &__item
    height 285px
    margin-top 10px
    margin-bottom 0rem !important
    padding 0rem
    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.3);
    &__boxImg
      height 70%
      width 100%
      &__img
        width 100%
        height 100%
    &__boxtext
      height 30%
      padding 10px 10px
      position relative
      &__name
        font-size 13px !important
        line-height 20px
        text-transform uppercase
        margin-top 5px
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden !important;
        text-overflow: ellipsis !important;
      &__boxLike
        position absolute
        bottom 5px
        left 10px
      &__number
        color $dark
        font-size 14px
      &__likes
        font-size 20px
        margin-right 5px
        color $yellowStar
  &__detalle
    &__boxRedes
      display block
      padding 6px 30px
    &__linkRed
      text-decoration none
      display block
      margin-bottom 7px
      &__icon
        font-size 20px
        margin-right 10px
      &__red
        color $green
        font-weight bold
        font-size 16px
        text-decoration underline !important


.modal-backdrop, .modal-backdrop-bg
  top 0% !important

.active
  color $green !important
  font-weight bold !important
.active > a
  background #f4f4f4 !important

